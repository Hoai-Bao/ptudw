<% layout('_layouts/main') -%>
<% block('script','<script src="/javascripts/startRating.js"></script>') -%>
<% block('stylesheets','<link rel="stylesheet" href="/stylesheets/vProduct.css" />') -%>
<div class="container mt-4">
    <div class="card">
        <div class="row">
            <aside class="col-sm-5 border-right">
                <article class="gallery-wrap">
                    <div class="img-big-wrap">
                        <div> <a href="#"><img src="/images/ip111.jpg"></a></div>
                    </div> <!-- slider-product.// -->
                    <div class="img-small-wrap">
                        <div class="item-gallery"> <img src="/images/ip111.jpg"> </div>
                        <div class="item-gallery"> <img src="/images/ip111.jpg"> </div>
                        <div class="item-gallery"> <img src="/images/ip111.jpg"> </div>
                        <div class="item-gallery"> <img src="/images/ip111.jpg"> </div>
                        <div class="item-gallery"> <img src="/images/ip111.jpg"> </div>
                        <div class="item-gallery"> <img src="/images/ip111.jpg"> </div>
                    </div> <!-- slider-nav.// -->
                </article> <!-- gallery-wrap .end// -->
            </aside>
            <aside class="col-sm-7">
                <article class="card-body p-5">
                    <h3 class="title mb-3">PRODUCT NAME</h3>
                    </p> <!-- price-detail-wrap .// -->
                    <section id="endsInTime">
                        <div class="AuctionTimer">
                            <div id="Time">
                                <p id="hours" class="customShadowBorder">01</p><span>:</span>
                                <p id="minutes" class="customShadowBorder">02</p><span>:</span>
                                <p id="seconds" class="customShadowBorder">03</p>
                            </div>
                        </div>
                    </section>

                    <div class="sellerBlock">
                        <section id="sellerInfo">
                            <div class="row">
                                <div class="col-auto">
                                    <header class="smallUpperHeader">Seller:</header>
                                    <h4>Seller name</h4>
                                </div>
                                <div class="col-auto ml-4">
                                    <header class="smallUpperHeader">Rating:</header>
                                    <div class="starrating risingstar d-flex justify-content-center flex-row-reverse">
                                        <input type="radio" id="star5" name="rating" value="5" /><label for="star5"
                                            title="5 star"></label>
                                        <input type="radio" id="star4" name="rating" value="4" /><label for="star4"
                                            title="4 star"></label>
                                        <input type="radio" id="star3" name="rating" value="3" /><label for="star3"
                                            title="3 star"></label>
                                        <input type="radio" id="star2" name="rating" value="2" /><label for="star2"
                                            title="2 star"></label>
                                        <input type="radio" id="star1" name="rating" value="1" /><label for="star1"
                                            title="1 star"></label>
                                    </div>
                                    <span class="number-rating">10/10</span>
                                </div>
                            </div>
                        </section>
                    </div>
                    <hr>
                    <div class="currentBidBlock mt-2">
                        <section id="bidInfo">
                            <div class="row">
                                <div class="col-auto">
                                    <header class="smallUpperHeader">Current Bid:</header>
                                    <main id="currentBidText">
                                        <span class="cBid">
                                            1.000K &#8363;
                                        </span></main>
                                </div>
                                <div class="col-auto">
                                    <header class="smallUpperHeader">Current Winner:</header>
                                    <main id="currentBidText">
                                        <span class="cBid">
                                            Bidder's name
                                        </span></main>
                                </div>
                            </div>

                        </section>
                    </div>
                    <hr>
                    <div class="bidDetail">
                        <header class="smallUpperHeader placeBidText">Place your bid:</header>
                        <div class="placeBid">
                            <span class="bidding_box_fancy">
                                <em><button type="button" class="decreaseBid" id="moins">-</button></em>
                                <span class="BidValue">
                                    <div id="NewBidText" class="CustomSelect">100K</div>
                                </span>
                                <em><button type="button" class="increaseBid" id="plus">+</button></em>
                            </span>
                            <span class="bidding_button">
                                <div class="btnHammer"></div>
                                <a class="buttons bidding large" href="">
                                    <span>Place bid</span>
                                </a>
                            </span>
                        </div>
                    </div>
                </article> <!-- card-body.// -->
            </aside> <!-- col.// -->
        </div> <!-- row.// -->
    </div> <!-- card.// -->
    <hr>
    <div id="productDetailData" class="row contentWrapper whiteBackground padding-10 marginT10 borderGrey">
        <section class="col-sm-9">
            <div class="product_details productData">
                <h1>Product Details</h1>
                <div class="contData">
                    <div style="display: none">
                        <h3>Product Details</h3>
                    </div>
                    <table width="300" cellspacing="1" cellpadding="1">
                        <tbody>
                            <tr>
                                <td>
                                    Auction no:</td>
                                <td id="litAuctionId">
                                    406613403</td>
                            </tr>
                            <tr>
                                <td>
                                    Item no:
                                </td>
                                <td>
                                    16-668</td>
                            </tr>
                        </tbody>
                    </table>
                    <h3>
                        Product Description</h3>
                    <p>
                        <span id="ContentPlaceHolder1_lbDescription">- Motorcycle hand guards with LED turn signal
                            lights.<br>- Modes : Daytime running light (White light) / Turn signal light (Amber)<br>-
                            Material : ABS<br>- Size : 12.6 x 8.8 x 24.5 cm.<br>- Contain : 2 pieces / set.</span>
                    </p>
                    <p></p>
                    <p></p>
                    <p>
                        <span id="ContentPlaceHolder1_lbProductFacts"></span>
                    </p>
                </div>
            </div>
        </section>
        <section class="col-sm-3">
            <div class="side">
                <div class="container">
                    
                </div>
            </div>
        </section>
    </div>
</div>