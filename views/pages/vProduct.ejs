<% layout('_layouts/main') -%>
<% block('stylesheets','<link rel="stylesheet" href="/stylesheets/vProduct.css" />' + '<link rel="stylesheet" href="/stylesheets/lightbox.css">') -%>

<% block('script', '<script src="/javascripts/vProduct.js"></script>') -%>
<% block('script', '<script src="/javascripts/zoomsl.js"></script>') -%>
<% block('script', '<script src="/javascripts/script.js"></script>') -%>
<% if (!empty) {%>
<%- include('../part_layout/notfound') %>
<%}else{%>
<div class="container mt-4">
    <input type="hidden" id="productid" value="<%= product.id %>">
    <div class="card">
        <div class="row">
            <aside class="col-sm-5">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carouselExampleIndicators">
                    <ol class="carousel-indicators" style="width: auto">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"><img
                                src="/images/ip112.jpg"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1" data-lightbox="1"><img
                                src="/images/ip111.jpg"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"><img src="/images/alien42.jpg">
                        </li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="3"><img src="/images/laptop.jpg">
                        </li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="4"><img src="/images/iphone11.jpg">
                        </li>
                    </ol>
                    <div class="carousel-inner align-self-center ">
                        <div class="carousel-item active">
                            <img src="/images/ip112.jpg" class="d-block">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/ip111.jpg" class="d-block">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/alien42.jpg" class="d-block">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/laptop.jpg" class="d-block">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/iphone11.jpg" class="d-block">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </aside>
            <aside class="col-sm-7">
                <article class="card-body">
                    <h3 class="title mb-3"><%= product.nameProduct %></h3>
                    </p> <!-- price-detail-wrap .// -->
                    <section id="endsInTime">
                        <div class="AuctionTimer">
                            <div id="Time">
                                <p id="hours" class="customShadowBorder">01</p><span>:</span>
                                <p id="minutes" class="customShadowBorder">02</p><span>:</span>
                                <p id="seconds" class="customShadowBorder">03</p>
                            </div>
                        </div>
                    </section>

                    <div class="sellerBlock">
                        <section id="sellerInfo">
                            <div class="row">
                                <div class="col-auto">
                                    <header class="smallUpperHeader">Seller:</header>
                                    <h4>Seller name</h4>
                                </div>
                                <div class="col-auto ml-4">
                                    <header class="smallUpperHeader">Rating:</header>
                                    <div class="starrating risingstar d-flex justify-content-center flex-row-reverse">
                                        <input type="radio" id="star5" name="rating" value="5" /><label for="star5"
                                            title="5 star"></label>
                                        <input type="radio" id="star4" name="rating" value="4" /><label for="star4"
                                            title="4 star"></label>
                                        <input type="radio" id="star3" name="rating" value="3" /><label for="star3"
                                            title="3 star"></label>
                                        <input type="radio" id="star2" name="rating" value="2" /><label for="star2"
                                            title="2 star"></label>
                                        <input type="radio" id="star1" name="rating" value="1" /><label for="star1"
                                            title="1 star"></label>
                                    </div>
                                    <span class="number-rating">10/10</span>
                                </div>
                            </div>
                        </section>
                    </div>
                    <hr>
                    <div class="currentBidBlock mt-2">
                        <section id="bidInfo">
                            <div class="row">
                                <div class="col-auto">
                                    <header class="smallUpperHeader">Current Bid Price:</header>
                                    <main id="currentBidText">
                                        <span class="cBid">
                                            <%= product.nowprice %>
                                        </span></main>
                                </div>
                                <div class="col-auto">
                                    <header class="smallUpperHeader">Current Winner:</header>
                                    <main id="currentBidText">
                                        <span class="cBid">
                                            <%if (namebidCurrent == null) {%>
                                              Hiện chưa có ai đấu giá 
                                            <%}else{%>
                                                <%= namebidCurrent %>
                                            <%}%>
                                        </span></main>
                                </div>
                            </div>

                        </section>
                    </div>
                    <hr>
                    <div class="bidDetail">
                        <header class="smallUpperHeader placeBidText">Place your bid:</header>
                        <div class="placeBid">
                            <span class="bidding_box_fancy">
                                <em><button type="button" class="decreaseBid" id="down"
                                        onclick="down();">-</button></em>
                                <span class="BidValue">
                                    <input type="text" id="NewBidText" class="CustomSelect" value="100" />
                                </span>
                                <em><button type="button" class="increaseBid" id="up" onclick="up();">+</button></em>
                            </span>
                            <span class="bidding_button">
                                <div class="btnHammer"></div>
                                <a class="buttons bidding large" href="#">
                                    <span>Place bid</span>
                                </a>
                            </span>
                        </div>
                    </div>
                    <div class="bidTimer">
                        <div class="row">

                        </div>
                    </div>

                </article> <!-- card-body.// -->
            </aside> <!-- col.// -->
        </div> <!-- row.// -->
    </div> <!-- card.// -->
    <hr>
    <div id="productDetailData" class="row contentWrapper whiteBackground padding-10 marginT10 borderGrey">
        <section class="col-sm-9">
            <div class="product_details productData">
                <h1>Product Details</h1>
                <div class="contData">
                    <div style="display: none">
                        <h3>Product Details</h3>
                    </div>
                    <table width="300" cellspacing="1" cellpadding="1">
                        <tbody>
                            <tr>
                                <td>
                                    Auction no:</td>
                                <td id="litAuctionId">
                                    406613403</td>
                            </tr>
                            <tr>
                                <td>
                                    Item no:
                                </td>
                                <td>
                                    16-668</td>
                            </tr>
                        </tbody>
                    </table>
                    <h3>
                        Product Description</h3>
                    <p>
                        <textarea id="detail"><%= product.detail %></textarea>
                    </p>
                    <p></p>
                    <p></p>
                    <p>
                        <span id="ContentPlaceHolder1_lbProductFacts"></span>
                    </p>
                </div>
            </div>
        </section>
        <section class="col-sm-3">
            <div class="side">
                <div class="container">
                    <section class="timestart"></section>
                </div>
            </div>
        </section>
    </div>
</div>
<%}%>
<script>
    

</script>