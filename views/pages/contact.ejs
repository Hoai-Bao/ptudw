<% layout('_layouts/main') -%>
<% block('stylesheets','<link href="//cdn.shopify.com/s/files/1/0071/2081/4195/t/21/assets/theme.scss.css?21820" rel="stylesheet" type="text/css" media="all" />'
+'<link rel="stylesheet" href="stylesheets/home.css">') -%>

<div class="PageContent PageContent--narrow">
    <div class="SectionHeader SectionHeader--center">
        <h1 class="SectionHeader__Heading Heading u-h1">Contact us</h1>
    </div>
    <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8"
        class="Form Form--spacingTight"><input type="hidden" name="form_type" value="contact" /><input type="hidden"
            name="utf8" value="âœ“" />
        <div class="Form__Group">
            <div class="Form__Item">
                <input type="text" class="Form__Input" name="contact[name]" aria-label="Your name"
                    placeholder="Your name" required>
                <label class="Form__FloatingLabel">Your name</label>
            </div>

            <div class="Form__Item">
                <input type="email" class="Form__Input" name="contact[email]" aria-label="Your email"
                    placeholder="Your email" required>
                <label class="Form__FloatingLabel">Your email</label>
            </div>
        </div>
        <div class="Form__Item"><input type="text" class="Form__Input" name="contact[Your phone (optional)]"
                aria-label="Your phone (optional)" placeholder="Your phone (optional)">
            <label class="Form__FloatingLabel">Your phone (optional)</label></div>
        <div class="Form__Item">
            <textarea name="contact[body]" cols="30" rows="10" class="Form__Textarea" aria-label="Your message"
                placeholder="Your message" required></textarea>
            <label class="Form__FloatingLabel">Your message</label>
        </div>

        <button type="submit" class="Form__Submit btn-primary btn-lg active">Send message</button>
    </form>
</div>