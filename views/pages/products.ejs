<% layout('_layouts/main') -%>
<div class="container mt-4  ">
    <nav aria-label="breadcrumb ">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Collections</li>
        </ol>
    </nav>
</div>
<div class="container">
    <div class="row mt-2">
        <div class="col-sm-12">
            <ul class="category-show list-unstyled d-flex ">
                <li class="category-item"><a href="/product" class="category-link active">All Products</a></li>
                <li class="category-item"><a href="&?cat=1" class="category-link">Phone</a></li>
                <li class="category-item"><a href="?cat=2" class="category-link">Laptop</a></li>
                <li class="category-item"><a href="?cat=3" class="category-link">Desktop</a></li>
                <li class="category-item"><a href="?cat=4" class="category-link">Other</a></li>
                <li class="category-item ml-auto"><a href="" class="categorylink">
                    <select id="sorting" onchange="selectionChange()">
                        <option value="Sort By">Sort Products</option>
                        <option value="Sort By Price" id="price">Sort By Price</option>
                        <option value="Sort By A-Z" id="az">Sort By A-Z</option>
                        <option value="Sort By Z-A" id="az">Sort By Z-A</option>
                    </select>
                        
                    </a></li>
                <li class="category-item">
                    <form class="form-inline">
                        <input class="form-control mr-sm-2 " type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="container">
    <% temp=all ; page = page_numbers%>
    <%- include ../layout/product_view2 %>
</div>
<% block('script','<script src="../javascripts/home.js"></script>') -%>
<% block('stylesheets','<link rel="stylesheet" href="../stylesheets/category.css" />' + '<link rel="stylesheet" href="../stylesheets/productview.css" />') -%>
